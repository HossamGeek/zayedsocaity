{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "backend - nodemon",
			"cwd": "${workspaceFolder}/ZayedApp",
			"runtimeExecutable": "${workspaceFolder}/ZayedApp/node_modules/.bin/nodemon",
			"runtimeArgs": [
				"--nolazy",
				"--exec",
				"${workspaceFolder}/ZayedApp/node_modules/.bin/babel-node"
			],
			"program": "${workspaceFolder}/ZayedApp/server.js",
			"restart": true,
			"protocol": "inspector",
			"stopOnEntry": false,
			"sourceMaps": true,
			"showAsyncStacks": true,
			"console": "internalConsole",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"BABEL_ENV": "development"
			}
		}
	]
}